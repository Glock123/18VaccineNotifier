<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hospital_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apollo Hospital Navi Mumbai"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/hospital_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plot 13 Parsik Hill Rd Sector 23 CBD Belapur Navi Mumbai Maharashtra 400614"/>


                <TextView
                    android:id="@+id/fee_type"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="PAID"
                    android:textSize="17sp"
                    android:textColor="@color/red"/>
                <TextView
                    android:id="@+id/fee_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="COVISHELD: Rs 1010"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/black"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/view_hide_sessions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cornerRadius="18dp"
            app:icon="@drawable/ic_baseline_keyboard_arrow_down_24"
            android:backgroundTint="@color/red"
            android:text="View Sessions" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbars="vertical"
            android:id="@+id/rv_sessions"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>